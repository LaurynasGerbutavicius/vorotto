{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.datatables.net/1.10.13/css/dataTables.material.min.css" rel="stylesheet">
    {% endblock %}

{% block body %}
    <div class="totals">
        <div id="total-income" class="col-md-4 col-xs-12">
            <span><span class="currency-euro">€</span>{{ additional_data.totals.income|number_format }}</span>
            <br>
            <span class="total-text">{{ 'total.income'|trans }}</span>
        </div>
        <div id="total-expense" class="col-md-4 col-xs-12">
            <span><span class="currency-euro">€</span>{{ additional_data.totals.expense|number_format }}</span>
            <br>
            <span class="total-text">{{ 'total.income'|trans }}</span>
        </div>
        <div id="total-balance" class="col-md-4 col-xs-12">
            <span><span class="currency-euro">€</span>{{ (additional_data.totals.income - additional_data.totals.expense)|number_format }}</span>
            <br>
            <span class="total-text">{{ 'total.balance'|trans }}</span>
        </div>
    </div>

    {% set show_path_route = entity_name ~ '_show' %}
    {% set edit_path_route = entity_name ~ '_edit' %}
    {% set delete_path_route = entity_name ~ '_delete' %}
    {% set new_path_route = entity_name ~ '_new' %}
    {% set filter_path = path(entity_name ~ '_filter') %}

        <div class="col-md-8">
            <h3>{{ ('list.title.'~entity_name)|trans }}</h3>
        </div>
        <div class="col-md-4">
            <a class="btn btn-raised btn-primary pull-right"
               href="{{ path(new_path_route) }}">{{ 'action.new'|trans }}</a>
        </div>

    <div class="col-md-12">
        <div class="col-md-2">
            <a class="btn btn-primary btn-sm" id="slide-toggle">
                <i class="material-icons md-24">filter_list</i>
            </a>
        </div>
        <div class="col-md-10">
            <form class="form-inline" id="list_filter_form" action="{{ filter_path }}" method="GET">
                <div class="form-group is-empty">
                    <label class="col-sm-2 control-label" for="list_filter_date_from">{{ 'filter.label.date_from'|trans }}</label>
                    <div class="col-sm-3">
                        <input type="text" id="list_filter_date_from" name="from"
                               class="datepicker form-control"/>
                    </div>
                </div>
                <div class="form-group is-empty">
                    <label class="col-sm-2 control-label" for="list_filter_date_to">{{ 'filter.label.date_to'|trans }}</label>
                    <div class="col-sm-3">
                        <input type="text" id="list_filter_date_to" name="to"
                               class="datepicker form-control"/>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary btn-sm" value="{{ 'action.filter'|trans }}"/>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover dt">
        <thead>
        <tr>
            {% for header_item in entity_fields|keys %}
                <th>{{ ('field.label.'~header_item)|trans }}</th>
            {% endfor %}
            <th>{{ 'field.label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in list %}
            <tr class="vertical-middle">
                <td>
                    <a class="btn btn-link btn-sm" href="{{ path(show_path_route, { 'id': entity.id }) }}">{{ entity.id }}</a>
                </td>
                {% for field_name, field_type in entity_fields if field_name != 'id' %}
                    {% include 'default/field.html.twig' with {'field_data' : attribute(entity, field_name)|entity_field(field_type, field_name), 'total' : total} only %}
                {% endfor %}
                <td class="actions-col">
                    <div class="btn-group">
                        <a class="btn btn-primary btn-sm"
                           href="{{ path(show_path_route, { 'id': entity.id }) }}">{{ 'action.show'|trans }}</a>
                        <a class="btn btn-primary btn-sm"
                           href="{{ path(edit_path_route, { 'id': entity.id }) }}">{{ 'action.edit'|trans }}</a>
                        <a class="btn btn-danger btn-sm"
                           href="{{ path(delete_path_route, { 'id': entity.id }) }}">{{ 'action.delete'|trans }}</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        {% if list|length > 1 %}
            <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <span class="number"><span class="currency-euro">€</span>{{ total|number_format }}</span>
                </td>
                <td></td>
                <td></td>
            </tr>
            </tfoot>
        {% endif %}
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/dataTables.material.min.js"></script>
{% endblock %}