{% extends 'base.html.twig' %}

{% block body %}
    <h1>Incomes list</h1>

    <table class="table table-striped table-hover dt">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for income in incomes %}
            <tr>
                <td><a href="{{ path('income_show', { 'id': income.id }) }}">{{ income.id }}</a></td>
                <td>{{ income.title }}</td>
                <td>{{ income.quantity }}</td>
                <td>{{ income.price }}</td>
                <td>{{ income.amount }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('income_show', { 'id': income.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('income_edit', { 'id': income.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('income_new') }}">Create a new income</a>
        </li>
    </ul>
{% endblock %}
